.container.push-down
	.panel.panel-default
		.panel-body
			h2 {{ username }}
			p Level: {{ PlayerData.player.level }}
			.progress
				.progress-bar.progress-bar-success.progress-bar-stripes(style="width: {{PlayerData.player.levelComplete * 100 | number:0}}%")
			h3 Resources
			.row
				.col-md-6
					.panel.panel-default
						.panel-heading Available
						.panel-body
							.row
								.col-xs-3.res
									img(src="img/au.png")
									| {{ PlayerData.resources['gold'] | number:0 }}
								.col-xs-3.res
									img(src="img/bn.png")
									| {{ PlayerData.resources['bionium'] | number:0 }}
								.col-xs-3.res
									img(src="img/qb.png")
									| {{ PlayerData.resources['qubitium'] | number:0 }}
								.col-xs-3.res
									img(src="img/tr.png")
									| {{ PlayerData.resources['transendium'] | number:0 }}

				.col-md-6
					.panel.panel-default
						.panel-heading Incoming (per hour)
						.panel-body
							.row
								.col-xs-3.res
									img(src="img/au.png")
									| {{ PlayerData.resourcesPerHour['gold'] | number:0 }}
								.col-xs-3.res
									img(src="img/bn.png")
									| {{ PlayerData.resourcesPerHour['bionium'] | number:0 }}
								.col-xs-3.res
									img(src="img/qb.png")
									| {{ PlayerData.resourcesPerHour['qubitium'] | number:0 }}
								.col-xs-3.res
									img(src="img/tr.png")
									| {{ PlayerData.resourcesPerHour['transendium'] | number:0 }}

			h2 Unlocked buildings
			.row
				.col-md-6(ng-repeat="item in PlayerData.buildings")
					.panel.panel-default
						.panel-heading {{ item.name }} (Level: {{ item.level }})
						.panel-body
							h3 Cost:
							.row
								.col-xs-3.res
									img(src="img/au.png")
									| {{ item.gold | number:0 }}
								.col-xs-3.res
									img(src="img/bn.png")
									| {{ item.bionium | number:0 }}
								.col-xs-3.res
									img(src="img/qb.png")
									| {{ item.qubitium | number:0 }}
								.col-xs-3.res
									img(src="img/tr.png")
									| {{ item.transendium | number:0 }}
							h3 Action:
							button.btn.btn-primary(ng-show="item.active" ng-click="takeAction(item.prop.actionId)") Upgrade
							p(ng-hide="item.active") Requirements
